# gitignore template for Drupal 8 projects
#
# earlier versions of Drupal are tracked in `community/PHP/`

# Ignore configuration files that may contain sensitive information
/sites/*/settings*.php
/sites/*/*services*.yml
.env

# Ignore paths that may contain user-generated content
/sites/*/files/*
/sites/*/public
/sites/*/private
/sites/*/files-public
/files-private

# Ignore paths that may contain temporary files
/sites/*/translations
/sites/*/tmp
/sites/*/cache

# Ignore testing related files
/sites/simpletest

# Ignore drupal core (if not versioning drupal sources)
/deploy
/tests/behat
/vendor
/core
/libraries
/modules/contrib
/profiles/contrib
/themes/contrib
/sites/README.txt
/sites/example.sites.php
/sites/example.settings.local.php
/sites/development.services.yml
/.csslintrc
/.editorconfig
/.eslintignore
/.eslintrc.json
/.gitattributes
/.ht.router.php
/autoload.php
/example.gitignore
/index.php
/INSTALL.txt
/LICENSE.txt
/README.txt
/robots.txt
/update.php
/web.config
/drush/sites/local.drush.yml

# Exceptions
!/sites/default/settings.php
!/sites/default/files/.htaccess

# Editor files
.gitattributes
node_modules

# Vim generated files #
######################
*.un~

# SASS #
##########
.sass-cache
*.sass-cache

# Things in the core directory that Drupal 8 commits in the repository.
!core/**/*.gz

# Ignore devs trash
.env
.vscode
.idea
*.gz
*.log
*.sql
*.zip
*:Zone.Identifier
._*
/.editorconfig

# ddev
.ddev/
*settings.ddev.php

# OS generated files
.DS_Store?
.DS_Store
ehthumbs.db
Thumbs.db
._*
sites/
themes/contrib/bootstrap/src/Plugin/Provider/DrupalBootstrapStyles.php
/.htaccess